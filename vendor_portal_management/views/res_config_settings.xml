<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.vendor.stocks</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="vendor_product_management.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='vendor_product_management']" position="before">
                <div class="row mt16 o_settings_container" id="vendor_portal_management">
                <div class="col-12 col-lg-6 o_setting_box" >
                    <div class="o_setting_left_pane">
                        <field name="show_stocks_in_portal"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_stocks_in_portal"/>
                        <div class="text-muted">
                            Let Vendors review and update their Inventory data
                        </div>
                    </div>
                    <div class="col-12 col-lg-12 o_setting_box">
                    </div>
                </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
