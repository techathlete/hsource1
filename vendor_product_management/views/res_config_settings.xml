<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.vendor.stocks</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']" position="inside">
                <h2>Vendor Products</h2>

                  <div class="row mt16 o_settings_container" id="vendor_product_management">
                    <div class="col-12 col-lg-6 o_setting_box"  id="vendor_product_management_1st_block">
                      <div class="o_setting_left_pane"/>
                      <div class="o_setting_right_pane">
                        <label for="vendor_pharma_import_id"/>
                        <field name="vendor_pharma_import_id"/>
                      </div>
                    </div>
                  </div>
                  <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-12 o_setting_box">
                      <div class="o_setting_left_pane"/>
                      <div class="o_setting_right_pane">
                        <label for="vendor_pharma_help"/>
                        <field name="vendor_pharma_help"/>
                      </div>
                    </div>
                  </div>

                  <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box"  id="vendor_product_management_2st_block">
                      <div class="o_setting_left_pane"/>
                      <div class="o_setting_right_pane">
                          <label for="vendor_medical_import_id"/>
                          <field name="vendor_medical_import_id"/>
                      </div>
                    </div>
                  </div>
                  <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-12 o_setting_box">
                      <div class="o_setting_left_pane"/>
                      <div class="o_setting_right_pane">
                        <label for="vendor_medical_help"/>
                        <field name="vendor_medical_help"/>
                      </div>
                    </div>
                  </div>
                  
                  <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="vendor_product_management_3rd_block">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="vendor_capital_import_id"/>
                            <field name="vendor_capital_import_id"/>
                        </div>
                    </div>
                  </div>
                  <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-12 o_setting_box">
                      <div class="o_setting_left_pane"/>
                      <div class="o_setting_right_pane">
                        <label for="vendor_capital_help"/>
                        <field name="vendor_capital_help"/>
                      </div>
                    </div>
                  </div>
            </xpath>
        </field>
    </record>

</odoo>
